.issue{
 
   margin-top: 20rpx;
   width: 100%;
   height: 330rpx;
   background-color: white;
   position: relative;
   overflow:hidden;


}

.issue::before {
content:" ";
position:absolute;
left:0;
top:0;
right:0;
height:1px;
border-top:1rpx solid #E5E5E5;
color:#E5E5E5;

}
.issue::after {
content:" ";
position:absolute;
left:0;
bottom:0;
right:0;
height:1px;
border-bottom:1rpx solid #E5E5E5;
color:#E5E5E5;

}
