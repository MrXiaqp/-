.view-panel{

   background-color: #ffffff;
   margin-top: 20rpx;
   position: relative;
   overflow:hidden;
}
.view-panel::before {
content:" ";
position:absolute;
left:0;
top:0;
right:0;
height:1px;
border-top:1rpx solid #E5E5E5;
color:#E5E5E5;

}
.view-panel::after {
content:" ";
position:absolute;
left:0;
bottom:0;
right:0;
height:1px;
border-bottom:1rpx solid #E5E5E5;
color:#E5E5E5;

}

.view-panel_hd{
padding:14px 15px 10px;

color:#999999;
font-size:13px;
 position: relative;

}

.view-panel_hd::after{
content:" ";
position:absolute;
left:20rpx;
bottom:0;
right:0;
height:1px;
border-bottom:1rpx solid #E5E5E5;
color:#E5E5E5;


}
.info-meta {
