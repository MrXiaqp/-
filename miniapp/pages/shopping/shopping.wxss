.weui-media-box_appmsg{

  display:-webkit-flex;

  align-items:center;


}
.weui-media-box {
padding:15px;


}
.weui-media-box_hd_in-appmsg {
margin-right:.10rpx;
width:150rpx;
height:150rpx;
line-height:60rpx;
text-align:center;

}
.weui-media-box_thumb {
width:100%;
