.productContent{
    width: 100%;
    height: 500rpx;
    background-color: white;
    margin-top: 20rpx;
    position: relative;
    overflow:hidden;
   

}
.productContent::before {
content:" ";
position:absolute;
left:0;
top:0;
right:0;
height:1px;
border-top:1rpx solid #E5E5E5;
color:#E5E5E5;

}
.productContent::after {
content:" ";
position:absolute;
left:0;
bottom:0;
right:0;
height:1px;
border-bottom:1rpx solid #E5E5E5;
color:#E5E5E5;

}
